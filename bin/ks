# This controls whether kano-settings gets shown straight after booting up

FNAME=/home/$USER/.kano-settings

while read line
do
    if [[ $line = "Completed:1" ]] ; then
        exit 0
    fi
done < $FNAME

sudo /usr/bin/kano-settings
exit 0
